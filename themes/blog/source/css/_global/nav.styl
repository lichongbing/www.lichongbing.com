nav
  .navbar
    display flex
    justify-content space-between
    align-items center
    height 64px
    padding 0 30px
    margin 0 10%

    .open_nav
      margin-left 10px
      display none

    .blog_name
      font-weight 700
      font-size 1.8rem
      color $title
      display inline-block
      text-decoration none
      margin-left 5rem
      min-width 7.2rem

  ul.side-toolbar
    min-width 5.6rem

    li
      float right
      font-size 14px
      width 2rem
      height 2rem
      line-height 2rem
      text-align center
      margin-right .6rem
      color var(--post_title)
      background-color var(--navbar_bg)
      border 1px solid #ccc
      border-radius 50%
      transition 0.3s ease all

    li:hover
      color var(--navbar_bg)
      border 1px solid var(--navbar_bg)
      background-color var(--post_title)


  #navbar_wrap
    padding-inline-start 0
    position fixed
    z-index 991
    top 0
    width 100%
    background-color var(--navbar_bg)
    user-select none
    transition background .5s ease-in-out, padding .5s ease-in-out
    -webkit-transition background .5s ease-in-out, padding .5s ease-in-out
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
    -webkit-box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)

    .menu
      margin-right auto

      li
        position relative
        list-style none
        float left
        text-align center

        &:nth-child(odd)
          a
            &:before
              background-color yellow

            &:after
              background-color red

            &:hover
              & ~ .indicator
                background linear-gradient(130deg, yellow, red)

        &:nth-child(even)
          a
            &:before
              background-color #00e2ff

            &:after
              background-color #89ff00

            &:hover
              & ~ .indicator
                left 34%
                background linear-gradient(130deg, #00e2ff, #89ff00)

        ul
          &.menu_child
            display none

            li
              float none !important

              a
                &:before
                  background-color purple

                &:after
                  background-color palevioletred

                &:hover
                  & ~ .indicator
                    left 70%
                    background linear-gradient(130deg, purple, palevioletred)

        a
          cursor pointer
          white-space nowrap
          font-size 1.1rem
          color var(--love_color)
          position relative
          width 33.333%
          display table-cell
          text-align center
          text-decoration none
          font-weight bold
          padding 10px 20px
          transition 0.2s ease color

          i
            color var(--love_color)
            order 1
            font-size 13px

          i.fa-chevron-up
            display none

          &:before, &:after
            content ""
            position absolute
            border-radius 50%
            transform scale(0)
            transition 0.2s ease transform

          &:before
            top 0
            left 10px
            width 6px
            height 6px

          &:after
            top 5px
            left 18px
            width 4px
            height 4px

          &:hover, &:hover i
            color #00c4b6

            &:before, &:after
              transform scale(1)

            & ~ .indicator
              visibility unset
              width 100%

        .indicator
          visibility hidden
          width 0
          height 3px
          background-color #fff
          border-radius 5px
          transition 0.35s ease all
          margin 0 auto

        &:hover .menu_child
          background-color var(--navbar_bg)
          position absolute
          right 0
          display inline-block
          padding 0
          border-radius 6px
          width max-content
          min-width 80px
          margin-top 13px
          -webkit-box-shadow 0 5px 20px -4px rgba(0, 0, 0, .5)
          box-shadow 0 5px 20px -4px rgba(0, 0, 0, .5)

          &:before
            content ""
            position absolute
            top -20px
            left 50%
            margin-left -10px
            border-width 10px
            border-style solid
            border-color transparent transparent var(--navbar_bg)


// 手机端
.open_mobile
  -webkit-transform translate3d(100%, 0, 0)
  -moz-transform translate3d(100%, 0, 0)
  -o-transform translate3d(100%, 0, 0)
  -ms-transform translate3d(100%, 0, 0)
  transform translate3d(100%, 0, 0)
#mobile_nav
  background var(--main_bg)
  position fixed
  left -200px
  top 0
  z-index 991
  overflow hidden auto
  width 200px
  height 100%
  padding 0
  -webkit-transition all .5s
  -moz-transition all .5s
  -o-transition all .5s
  -ms-transition all .5s
  transition all .5s

  ul
    padding-inline-start unset

    li
      display block
      list-style none
      text-align center
      line-height 2

      a
        font-weight 700
        display block
        cursor pointer
        white-space nowrap
        padding 10px
        font-size .9rem
        color var(--love_color)

