#rightside
  transition all .5s
  position fixed
  right 66px
  bottom 45px
  width 38px
  z-index 11

  a,span
    display flex
    width 38px
    height 38px
    color #fff
    margin-bottom 8px
    border-radius 19px
    cursor pointer
    box-shadow #aaa 2px 5px 10px
    text-align center
    -webkit-transition -webkit-transform .4s
    -moz-transition -moz-transform .4s
    -o-transition -o-transform .4s
    -ms-transition -ms-transform .4s
    transition transform .4s
    -webkit-transform translate(48px, 0)
    -moz-transform translate(48px, 0)
    -o-transform translate(48px, 0)
    -ms-transform translate(48px, 0)
    transform translate(48px, 0)

    i
      width 38px
      height 38px
      line-height 38px
      font-size 1.1rem

  a#open_toc
    background linear-gradient(to right, #2d78ad 0, #2d78ad 100%)
  a#comment
    background linear-gradient(to bottom right, #f99 0, #f66 100%)
  span#darkmode
    background-color #000
  a#backTop
    background red
    visibility hidden
    i
      font-size 1.3rem


/* 滚动条 */
::-webkit-scrollbar
  display none

/* 底部滚动条 */
if hexo-config('scrollbar.footer')
  .progress-bar
    height 4px
    position fixed
    bottom 0
    z-index 993
    background linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab)
    background-size 400% 400%
    animation gradientBG 15s ease infinite
    opacity 0.8

/* 侧边滚动条 */
if hexo-config('scrollbar.aside')
  .scrollbar
    position fixed
    top calc(50% - 50px)
    right 15px
    height 100px
    width 6px
    background-color var(--love_color)
    border-radius 12px
    overflow hidden

  .scrollbar-current
    background-color var(--navbar_bg)
    border-radius 12px
    width 6px
    transition height 0.2s ease-out
