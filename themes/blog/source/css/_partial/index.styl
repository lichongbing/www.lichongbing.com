// Home 首页
#post_list
  .post-top
    z-index 9
    width 80px
    height 80px
    overflow hidden
    position absolute

    div
      line-height 18px
      text-align center
      -webkit-transform rotate(-45deg)
      -moz-transform rotate(-45deg)
      -ms-transform rotate(-45deg)
      -o-transform rotate(-45deg)
      position relative
      padding 3px 0
      top 10px
      left -28px
      width 100px
      box-shadow -3px 5px 6px -5px rgba(0, 0, 0, 0.5)
      background-color black
      color #fff

  .post_item
    content-visibility auto
    display inline-block
    margin 10px 15px;
    border-radius 8px
    background-color var(--main_bg)

    & > a
      position relative

      .card-image
        background-color #222
        border-radius 8px
        overflow hidden
        position relative
        z-index 1
        transition all 0.5s

        &:before, &:after
          content ''
          background radial-gradient(circle at 23% 70%, rgba(255, 255, 255, 0.7), #fff 30%)
          width 150%
          height 150%
          opacity 0
          transform rotate(45deg)
          position absolute
          right -150%
          z-index 1
          transition all 0.35s ease

        &:hover
          box-shadow 3px 3px 5px #999

          &:before
            opacity 1
            right -70%

          &:after
            opacity 1
            top -42%

          img
            transform scale(1.2)

          .box-content
            right 5%

          h3
            font-size 1.6rem
            font-weight 700
            line-height 1.7rem
            color mediumpurple
            &::before
              content 'X'
              font-size 0.9rem !important
              vertical-align bottom
              margin-right 0.5rem
              padding 2px
              border-radius 5px
              background hsl(0, 0%, 20%)
              color hsl(0, 0%, 100%)

          span
            width 180px
            word-break normal
            display block
            white-space pre-wrap
            word-wrap break-word
            overflow hidden

          .title-V
            visibility hidden

        img
          width 100%
          transition all 0.5s ease
          height 220px
          border-radius 0.3rem
          opacity 0.7

        .box-content
          text-align right
          transform translateY(-50%)
          position absolute
          top 50%
          right -100%
          z-index 2
          transition all 0.5s
          margin .8rem auto

          .post_title
            font-size 1.2rem
            margin-bottom 4px
            font-weight 700
            line-height 1.5
            word-break normal
            display block
            white-space pre-wrap
            word-wrap break-word
            overflow hidden
            text-decoration none

        .cover_wrap
          width 100%
          padding-bottom 50%
          position relative
          overflow hidden
          border-radius 8px

          .cover
            display block
            transition opacity 400ms ease-out
            position absolute
            left 0
            top 0
            object-fit cover
            width 100%
            height 100%

          .title-V
            font-size 1.6rem
            color #FFF
            text-align center
            position relative


    .post_description
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-line-clamp $line
      font-size 15.5px
      line-height 24px
      word-wrap break-word
      word-break break-all
      overflow hidden
      text-align center

    .post_meta_wrap
      margin 10px 0
      font-size 12px
      text-align left

      .post_meta
        width 90%
        margin 10px auto
        padding-bottom 5px
        border-bottom 2px solid aliceblue
        color var(--text_color)
        font-weight bold
        a
          text-decoration none
          color #999

        .post_categorie
          float right
